<div class="input-form">
    <%= form_tag("/events/create/#{@year}/#{@month}/#{@day}") do %>
        <input type="time" name="start_time"> ~ <input type="time" name="end_time">
        <input type="text" name="title" placeholder="title" value="<%= @title %>"><br>
        <textarea name="content" placeholder="memo"><%= @content %></textarea><br>
        <input type="submit" value="保存"><br>
    <% end %>

    <% if @error_message %>
        <%= @error_message %><br>
    <% end %>
</div>