<div class="input-form">
    <%= form_tag("/users/#{@user.id}/name_update") do %>
        <input type="text" name="name" value="<%= @name %>" placeholder="new_name">
        <input type="password" name="password" value="<%= @password %>" placeholder="password"><br>
        <input type="submit" value="保存">
    <% end %>
  <% if @error_message %>
    <%= @error_message %><br>
  <% end %>
</div>