<div class="input-form">
    <%= form_tag("/ess/#{@company.id}/#{@es.id}/update") do %>
        <input type="text" name="title" placeholder="title" value="<%= @title %>"><br>
        <textarea name="content" placeholder="コンテンツを入力"><%= @content %></textarea><br>
        <input type="submit" value="保存"><br>
    <% end %>

    <% if @error_message %>
        <%= @error_message %><br>
    <% end %>
</div>